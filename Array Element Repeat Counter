#include <stdio.h>
#include <stdlib.h>

int main()
{

    int array_length, i, j; //Variable for User Defined Array's Length

    printf("\n Array Lenth = ");
    scanf("%d",&array_length);

    int array[array_length]; //User Defined Array

    for(i=0;i<array_length;i++){
        printf("\n Array element [%d] : ",i+1);
        scanf("%d",&array[i]);
    }

    printf("\n \n Array : ");

        for(i=0;i<array_length;i++){
            printf("%d ",array[i]);
        }

    int array_copy[array_length]; //Copy of User Defined Array for comparing each element

    for(i=0;i<array_length;i++){
        array_copy[i]=array[i];
        }

        printf("\n \n \n");

    int array_repeat_count[array_length]; //An array which used for storing repeat count of each element of User Defined Array

    for(i=0;i<array_length;i++){
        array_repeat_count[i]=0;
    }


    for(i=0;i<array_length;i++){
        for(j=0;j<array_length;j++){

            if(array[i]==array_copy[j]){

                    array_repeat_count[i]=array_repeat_count[i]+1;
                }
            }
        }

        int which_element; //Variable for determining task of program which give an element's repeat count

        back:

        printf("\n Choose an Element : ");
        scanf("%d",&which_element);

        printf("\n \n Repeat Count : %d",array_repeat_count[which_element-1]);

        printf("\n \n \n");

        printf("\n Do you want to run for other elements ? \n");
        printf("\n Press 'Y' for Yes or Press 'N' for No : ");

        char yes_or_no; //variable for yes or no

        question:

        scanf("%c",&yes_or_no);

        switch(yes_or_no){
            case 'y' :
                goto back;
                break;
            case 'Y' :
                goto back;
                break;
            case 'n' :
                goto end;
                break;
            case 'N' :
                goto end;
                break;
            default:
                goto question;

        }

    end:

    return 0;

}
